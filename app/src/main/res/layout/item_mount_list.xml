<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_mount"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/iv_mount_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mount_021"/>

    <TextView
        android:layout_toRightOf="@+id/iv_mount_icon"
        android:layout_toEndOf="@+id/iv_mount_icon"
        android:id="@+id/tv_mount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雷象"
        android:layout_alignTop="@+id/iv_mount_icon"
        android:textSize="18sp"
        android:textColor="@color/cardview_dark_background"/>

    <TextView
        android:layout_alignBottom="@+id/iv_mount_icon"
        android:layout_toRightOf="@+id/iv_mount_icon"
        android:layout_toEndOf="@+id/iv_mount_icon"
        android:id="@+id/tv_mount_category"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="分类：PVP"/>
</RelativeLayout>